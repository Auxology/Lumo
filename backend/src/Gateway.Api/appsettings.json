{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173"
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/v{version:int}/api/login-requests/{**catch-all}"
        }
      },
      "auth-users-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/v{version:int}/api/users/{**catch-all}"
        }
      },
      "auth-sessions-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/v{version:int}/api/sessions/{**catch-all}"
        }
      },
      "main-chats-route": {
        "ClusterId": "main-cluster",
        "Match": {
          "Path": "/v{version:int}/api/chats/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-api": {
            "Address": "http://auth.api:5100"
          }
        }
      },
      "main-cluster": {
        "Destinations": {
          "main-api": {
            "Address": "http://main.api:5300"
          }
        }
      }
    }
  }
}
